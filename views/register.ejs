<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

<%- include('layouts/navbar'); -%>


  <!-- Main Content -->
  <h2 style = "height: 2em; margin-top: 5em; text-align: center; color: orange;">Create Account</h2>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
	    <% if(errors != null && errors.length > 0){ %>
		  <ul class="list-group">
		    <% for (let i of errors) { %>
			  <li class="list-group-item list-group-item-danger"><%= i %></li>
			<% } %>
		  </ul>
		<% } %>
        <form action="/users/register" method="POST"
		enctype="multipart/form-data">
          <div class="control-group">
            <div>
              <label>Username</label>
              <input type="text" class="form-control" 
			  id = "username" name="username" value="<%= username %>">
            </div>
          </div>
          <div class="control-group">
            <div>
              <label>Password</label>
              <input type="password" class="form-control" 
			  id="password" name="password" value="<%= password %>">
            </div>
          </div>
          <br>
          <div id="success"></div>
          <div class="form-group" style = "text-align: center;">
            <button type="submit" class="btn btn-primary" style = "color: white; background-color: green">Register</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <hr>

<%- include('layouts/footer'); -%>
<%- include('layouts/scripts'); -%>

</body>

</html>
