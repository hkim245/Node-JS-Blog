<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

<%- include('layouts/navbar'); -%>


  <!-- Main Content -->
  <h2 style = "height: 2em; margin-top: 5em; text-align: center; color: orange;">Create Post</h2>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/posts/store" method="POST"
		enctype="multipart/form-data">
          <div class="control-group">
            <div>
              <label>Title</label>
              <input type="text" class="form-control"
			  id = "title" name="title">
            </div>
          </div>
          <div class="control-group">
            <div>
              <label>Summary</label>
              <textarea rows="5" class="form-control"
			  id="body" name="body" ></textarea>
            </div>
          </div>
          <div class="control-group">
            <div>
              <label>Details</label>
              <textarea rows="5" class="form-control"
			  id="body" name="details" ></textarea>
            </div>
          </div>
		  <div class="control-group">
		    <div>
			  <label>Image</label>
			    <input type="file" class="form-control" id="image"
				name="image">
			</div>
		  </div>
          <br>
          <div id="success"></div>
          <div class="form-group" style = "text-align: center;">
            <button type="submit" class="btn btn-primary" style = "color: white; background-color: green" id="sendMessageButton">Send</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <hr>

<%- include('layouts/footer'); -%>
<%- include('layouts/scripts'); -%>

</body>

</html>
